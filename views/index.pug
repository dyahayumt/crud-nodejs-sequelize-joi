html
  head
    title= 'Web Student'
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
  body(style='\
  margin-top: 10px;\
  margin-left: 10px;\
  margin-bottom: 10px;\
  margin-right: 10px;\
  border-top: 40px;\
  border-right: 40px;\
  border-left: 40px;\
  border-bottom: 40px;\
  ')
  form(action='/input', method='GET')
    input.btn.btn-secondary(type='submit' value='Input New Student')
  .container
    h1= title
    table.table
      thead.thead-light
        tr
          th= 'ID'
          th= 'First Name'
          th= 'Middle Name'
          th= 'Last Name'
          th= 'Place of Birth'
          th= 'Date of Birth'
          th= 'Phone Number'
          th= 'Email Address'
      for student in data
        tr
          td= student.student_id
          td
              a.student.first_name(href='/student/'+student.student_id) #{student.first_name}
          td= student.middle_name
          td= student.last_name
          td= student.place_of_birth
          td= student.date_of_birth
          td= student.phone_number
          td= student.email_address
          td 
            a(href='/delete/'+student.student_id)
              button.btn.btn-danger(type='button') Delete
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
