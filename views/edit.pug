doctype html
html
  head
    style.
      div.container {
      width: 100%;
      height: 500%;
      min-height: 100%;
      border: 1px #e5e5ff;
      }
      header{
      padding: 1em;
      color: #000000;
      background-color: #b6bdc6;
      clear: left;
      text-align: center;
      }
      nav {
      float: left;
      max-width: 160px;
      margin: 0;
      padding: 1em;
      margin-top: 30px;
      margin-bottom: 5px;
      }
      nav ul {
      list-style-type: none;
      padding: 0;
      }
      nav ul a {
      text-decoration: none;
      }
      article {
      margin-left: 170px;
      padding: 2em;
      overflow: hidden;
      }
  body
   form(name="student_form" action="/updated-student" method="POST")
      .container
        header
          link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
          .card.text-center
            .card-header
              h2
                | Input New Student
        body
          .form-group.row
            label.col-3.col-form-label(for='example-text-input') Student ID
            .col-9
              input#example-text-input.form-control(type='text', name='student_id', value=student_id)
          .form-group.row
            label.col-3.col-form-label(for='example-text-input') First Name
            .col-9
              input#firstName.form-control(type='text', name='first_name', value=first_name)
          .form-group.row
            label.col-3.col-form-label(for='middleName') Middle Name
            .col-9
              input#middleName.form-control(type='text', name='middle_name', value=middle_name)
          .form-group.row
            label.col-3.col-form-label(for='lastName') Last Name
            .col-9
              input#lastName.form-control(type='text', name='last_name', value=last_name)
          .form-group.row
            label.col-3.col-form-label(for='placeBirth') Place Of Birth
            .col-9
              input#placeBirth.form-control(type='text', name='place_of_birth', value=place_of_birth)
          .form-group.row
            label.col-3.col-form-label(for='dateBirth') Date of Birth
            .col-9
              input#dateBirth.form-control(type='date', name='date_of_birth', value=date_of_birth)
          .form-group.row
            label.col-3.col-form-label(for='phoneNumber') Phone Number
            .col-9
              input#phoneNumber.form-control(type='text', name='phone_number', value=phone_number)
          .form-group.row
            label.col-3.col-form-label(for='email') Email Address
            .col-9
              input#email.form-control(type='text', name='email_address', value=email_address)
              input#oldId(type="hidden", name="oldId", value=sOldId)
        input.btn.btn-secondary(type='submit', value='Submit')
        script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
